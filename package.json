{
  "name": "tsfy",
  "version": "0.1.5",
  "description": "Useful type-safe utility functions and types.",
  "author": "Brian Shao <brian@ngsh.ca>",
  "license": "MIT",
  "repository": "https://github.com/cydq/tsfy",
  "keywords": [
    "typescript",
    "utility",
    "functional",
    "option",
    "result"
  ],
  "files": [
    "src/",
    "dist/"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "pnpm run clean && tsup src/index.ts",
    "lint": "pnpm run lint:eslint && pnpm run lint:types",
    "lint:eslint": "eslint . --ext .ts",
    "lint:types": "tsc",
    "test": "jest",
    "prepack": "pnpm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.5",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "terser": "^5.21.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
